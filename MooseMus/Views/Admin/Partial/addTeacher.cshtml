@using MooseMus.Models.Entities;
@model Tuple<UserModel, CourseModel>
@{
    ViewBag.Title = "Link teacher and course";
}

<p>preparing to link</p>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(tuple => tuple.Item1.name, "Student SSN", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(tuple => tuple.Item1, ViewData["Index"] as List<SelectListItem>, new{ @class="form-control"})
                @Html.ValidationMessageFor(tuple => tuple.Item1.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(tuple => tuple.Item2.name, "Course Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(tuple => tuple.Item2, ViewData["Index"] as List<SelectListItem>, new { @class = "form-control" })
                @Html.ValidationMessageFor(tuple => tuple.Item2.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}


