@using MooseMus.Models.ViewModels
@model StudentProjectPartViewModel

<h3>@Model.partName</h3>

<div class="container">
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Submission</th>
                <th>Accepted</th>
                <th>Best Submission</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sub in @Model.submissions)
            {
                <tr>
                    <td><a href="#" onclick="getSubmission(@sub.submission)">@sub.submission</a></td>
                    <td>@sub.accepted</td>
                    <td>@sub.best</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script type="text/javascript">
    function getSubmission(st){
        $('#proj').load("/Student/getSubmission?submissionID=" + st);
 //       return false;
    }
</script>

