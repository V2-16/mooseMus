@using MooseMus.Models.ViewModels
@model CourseProjectsViewModel

@{
    ViewBag.Title = @Model.name;
}

<nav class="navbar navbar-light bg-faded" role="navigation">
    <div class="navbar-header">
        <a class="navbar-brand" href="#">@Model.name</a>
    </div>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
            
             <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Nýtt verkefni<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="javascript:addProject();">Bæta við verkefni</a>
                        <script type="text/javascript">
                            function addProject()
                            {
                                $('#proj').load("@Url.Action("goToAddProject","Teacher", new { course = @Model.name })");
                            }
                        </script>
                    </li> 
                    <li>
                        <a href="javascript:addProjectPart();">Bæta við lið</a>
                        <script type="text/javascript">
                            function addProjectPart()
                            {
                                $('#proj').load("@Url.Action("createProjectPart","Teacher", new { course = @Model.name })");
                            }
                        </script>
                    </li>     
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Breyta verkefni<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    @if (Model.projects != null)
                    {
                        foreach (var project in @Model.projects)
                        {
                            var projectName = project.name;
                            <li>@Html.ActionLink(projectName, "Index", "Teacher", projectName, null)</li>
                        }
                    }
                </ul>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Skoða verkefni<b class="caret"></b></a>
                <ul class="dropdown-menu">
                    @if (Model.projects != null)
                    {
                        foreach (var pro in @Model.projects)
                        {
                            <li><a href="#" onclick="viewProject(@pro.projectID)">@pro.name</a></li>
                        }
                    }
               </ul>
            </li>
        </ul>
    </div>
</nav>

@if (ViewBag.Success != null && ViewBag.Success == true)
{
    Html.RenderPartial("CreatedSuccessfully");
}

<script type="text/javascript">
    function viewProject(pr)
    {      
        $('#proj').load('/Teacher/viewStudentsByProject?projectID=' + pr);
    }
</script>

<div id="proj">
</div>
